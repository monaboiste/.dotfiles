[alias]
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(brightyellow)%h%C(reset) - %C(green)(%ar)%C(reset) %s%C(reset) %C(red)- %an%C(reset)%C(yellow)%d%C(reset)'
  s = status
  a = add .
  c = commit
  ca = commit --amend
  fo = "!sh -c 'url=$(git remote get-url origin); if [[ $url == git@github.com:* ]]; then url=\"https://github.com/${url#git@github.com:}\"; fi; if [[ $url == https://github.com/* || $url == https://www.github.com/* ]]; then open \"$url\"; else echo \"Not a GitHub repository\"; fi'"
[tag]
  sort = -v:refname
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[difftool]
  prompt = false
[rebase]
  amendPreserveDate = true
